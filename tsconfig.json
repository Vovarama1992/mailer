{
  "compilerOptions": {
    "target": "ESNext",                             
    "module": "ESNext",                              
    "moduleResolution": "node",                      
    "esModuleInterop": true,                         
    "strict": true,                                  
    "skipLibCheck": true,                            
    "forceConsistentCasingInFileNames": true,        
    "outDir": "./dist",                             
    "resolveJsonModule": true,                      
    "allowJs": true,                                 
    "noEmit": false                                  
  },
  "include": ["src/**/*.ts"]
}